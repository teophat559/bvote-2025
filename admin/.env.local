# ========================================
# ADAPTOR DEPLOYMENT - LOCAL DEVELOPMENT
# ========================================

# ========================================
# MODE CONFIGURATION
# ========================================
# Set to '1' to use mock data, '0' to use real backend
VITE_USE_MOCK=0

# ========================================
# APP CONFIGURATION
# ========================================
VITE_APP_NAME=BVOTE Admin
VITE_BUILD_VERSION=2.0.0-adaptor
VITE_APP_ENV=development

# ========================================
# BACKEND API CONFIGURATION
# ========================================
# Base URL for REST API endpoints
VITE_API_URL=http://localhost:3000/api

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
# Socket.IO server URL
VITE_SOCKET_URL=http://localhost:3000

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# JWT token storage key
VITE_TOKEN_KEY=admin_token
# JWT refresh token key
VITE_REFRESH_TOKEN_KEY=admin_refresh_token
# Session timeout (minutes)
VITE_SESSION_TIMEOUT=30
# Max login attempts
VITE_MAX_LOGIN_ATTEMPTS=5
# Enable 2FA
VITE_ENABLE_2FA=0

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/disable real-time features
VITE_ENABLE_REALTIME=1
# Enable/disable audit logging
VITE_ENABLE_AUDIT_LOG=1
# Enable/disable notifications
VITE_ENABLE_NOTIFICATIONS=1
# Enable/disable data export
VITE_ENABLE_DATA_EXPORT=1
# Enable/disable bulk operations
VITE_ENABLE_BULK_OPERATIONS=1

# ========================================
# MOCK DATA CONFIGURATION
# ========================================
# Mock data refresh interval (seconds)
VITE_MOCK_REFRESH_INTERVAL=3
# Enable/disable mock notifications
VITE_MOCK_NOTIFICATIONS=1
# Mock data simulation delay (ms)
VITE_MOCK_DELAY_MIN=200
VITE_MOCK_DELAY_MAX=800

# ========================================
# PERFORMANCE & MONITORING
# ========================================
# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=1
# Enable error tracking
VITE_ENABLE_ERROR_TRACKING=1
# Enable user analytics
VITE_ENABLE_USER_ANALYTICS=0
# Log level (debug, info, warn, error)
VITE_LOG_LEVEL=debug

# ========================================
# INTEGRATION & WEBHOOKS
# ========================================
# External API timeout (ms)
VITE_EXTERNAL_API_TIMEOUT=5000
# Enable external integrations
VITE_ENABLE_EXTERNAL_INTEGRATIONS=0

# ========================================
# UI/UX CONFIGURATION
# ========================================
# Theme (light, dark, auto)
VITE_THEME=dark
# Language (vi, en)
VITE_LANGUAGE=vi
# Enable animations
VITE_ENABLE_ANIMATIONS=1
# Enable sound effects
VITE_ENABLE_SOUND_EFFECTS=0
