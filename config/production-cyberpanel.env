# ðŸŽ¯ BVOTE 2025 - CYBERPANEL PRODUCTION CONFIG
# Optimized for CyberPanel VPS environment
# OpenLiteSpeed + MySQL + CyberPanel integration

NODE_ENV=production

# ==============================================
# CYBERPANEL SERVER CONFIGURATION
# ==============================================
PORT=3000
API_PORT=3000
WS_PORT=8080
ADMIN_PORT=3002
USER_PORT=3001
HOST=0.0.0.0

# ==============================================
# CYBERPANEL DOMAIN CONFIGURATION
# ==============================================
DOMAIN=your-domain.com
BASE_URL=https://your-domain.com
CLIENT_URL=https://your-domain.com
ADMIN_URL=https://your-domain.com/admin
USER_URL=https://your-domain.com/user
API_BASE_URL=https://your-domain.com/api

# ==============================================
# CYBERPANEL PATH CONFIGURATION
# ==============================================
WEB_ROOT=/home/your-domain.com/public_html
APP_PATH=/home/your-domain.com/app
LOG_PATH=/home/your-domain.com/logs
UPLOAD_PATH=/home/your-domain.com/uploads
SSL_PATH=/etc/letsencrypt/live/your-domain.com

# ==============================================
# DATABASE - MYSQL (CYBERPANEL PREFERRED)
# ==============================================
# Option 1: MySQL (CyberPanel Default)
DATABASE_URL=mysql://your-domain_bvote:secure_password@localhost:3306/your-domain_bvote_db
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your-domain_bvote_db
DB_USER=your-domain_bvote
DB_PASSWORD=secure_password_here

# Option 2: PostgreSQL (Alternative)
# DATABASE_URL=postgresql://bvote_user:bvote_secure_2025@localhost:5432/bvote_production
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bvote_production
# DB_USER=bvote_user
# DB_PASSWORD=bvote_secure_2025

# ==============================================
# CORS - CYBERPANEL DOMAIN
# ==============================================
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com,http://your-domain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin

# ==============================================
# SECURITY - CYBERPANEL HARDENED
# ==============================================
JWT_SECRET=cyberpanel_bvote2025_secure_jwt_secret_production_unique
JWT_REFRESH_SECRET=cyberpanel_bvote2025_secure_refresh_secret_production_unique
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# SSL Configuration (CyberPanel managed)
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem

# ==============================================
# CYBERPANEL SPECIFIC SETTINGS
# ==============================================
# OpenLiteSpeed Configuration
LITESPEED_ENABLED=true
PASSENGER_ENABLED=true
NODE_SELECTOR_VERSION=18

# CyberPanel Integration
CYBERPANEL_ENABLED=true
PHPMYADMIN_ENABLED=true
WEBSITE_OWNER=admin
WEBSITE_PACKAGE=default

# ==============================================
# PERFORMANCE - CYBERPANEL OPTIMIZED
# ==============================================
ENABLE_CACHING=true
CACHE_TTL=300000
ENABLE_GZIP=true
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT=60000

# OpenLiteSpeed specific
LITESPEED_CACHE=true
LITESPEED_COMPRESSION=true
MAX_CONNECTIONS=150

# ==============================================
# LOGGING - CYBERPANEL PATHS
# ==============================================
LOG_LEVEL=info
LOG_FILE=/home/your-domain.com/logs/bvote-production.log
ERROR_LOG=/home/your-domain.com/logs/bvote-error.log
ACCESS_LOG=/home/your-domain.com/logs/bvote-access.log

# CyberPanel log integration
CYBERPANEL_LOGS=true
SYSLOG_ENABLED=false

# ==============================================
# RATE LIMITING - CYBERPANEL COMPATIBLE
# ==============================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
AUTH_RATE_LIMIT_MAX=50

# ==============================================
# FEATURES - CYBERPANEL OPTIMIZED
# ==============================================
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
ENABLE_2FA=true
ENABLE_AUDIT_LOG=true
ENABLE_FILE_UPLOAD=true

# ==============================================
# CYBERPANEL INTEGRATION FEATURES
# ==============================================
# Email (via CyberPanel)
EMAIL_ENABLED=true
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=true

# Backup (via CyberPanel)
BACKUP_ENABLED=true
BACKUP_PATH=/home/your-domain.com/backups
AUTO_BACKUP=true

# Firewall (CyberPanel managed)
FIREWALL_ENABLED=true
ALLOW_PORTS=80,443,3000,3001,3002,8080

# ==============================================
# CYBERPANEL DEPLOYMENT INFO
# ==============================================
DEPLOYMENT_TYPE=cyberpanel
WEB_SERVER=openlitespeed
CONTROL_PANEL=cyberpanel
DEPLOYMENT_DATE=$(date)

# ==============================================
# INSTRUCTIONS FOR CYBERPANEL
# ==============================================
# 1. Create website in CyberPanel with your domain
# 2. Enable Node.js via Node.js Selector
# 3. Create MySQL database via CyberPanel Database section
# 4. Upload project files to /home/{domain}/
# 5. Move static files to public_html/
# 6. Configure environment variables in CyberPanel
# 7. Start Node.js app via CyberPanel
# 8. Enable SSL via CyberPanel SSL section
