# ===================================
# PRODUCTION ENVIRONMENT - DEFAULT TEMPLATE
# ===================================

# Application Settings
NODE_ENV=production
PORT=3000
APP_NAME="Voting System"
APP_VERSION=1.0.0

# Database Configuration (MySQL)
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_password
DB_NAME=voting_system_db
DB_PORT=3306

# Database URL (Alternative format)
DATABASE_URL=mysql://your_db_user:your_password@localhost:3306/voting_system_db

# Security Settings
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# CORS Settings
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# API Settings
API_RATE_LIMIT=100
API_TIMEOUT=30000

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Settings (Optional)
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@your-domain.com

# Logging Settings
LOG_LEVEL=info
LOG_FILE=./logs/production.log

# Cache Settings
CACHE_TTL=300
REDIS_URL=redis://localhost:6379

# SSL Settings
SSL_ENABLED=true
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Monitoring Settings
HEALTH_CHECK_PATH=/api/health
METRICS_ENABLED=true

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Domain Settings
DOMAIN=your-domain.com
SUBDOMAIN_ADMIN=admin
SUBDOMAIN_USER=vote

# Social Login (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ===================================
# IMPORTANT:
# 1. Change all 'your-*' values to actual values
# 2. Keep this file secure - never commit to version control
# 3. Use strong passwords and secrets
# ===================================
