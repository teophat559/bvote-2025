# ========================================
# USERBVOTE - LOCAL DEVELOPMENT WITH ADAPTORS
# ========================================

# ========================================
# MODE CONFIGURATION
# ========================================
# Set to '1' to use mock data, '0' to use real backend
VITE_USE_MOCK=0

# ========================================
# APP CONFIGURATION
# ========================================
VITE_APP_NAME=BVOTE User (Adaptor Mode)
VITE_BUILD_VERSION=2.0.0-adaptor
VITE_APP_ENV=development

# ========================================
# BACKEND API CONFIGURATION
# ========================================
# Base URL for REST API endpoints (same as AdminBvote for shared backend)
VITE_API_URL=http://localhost:3001/api

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
# Socket.IO server URL (same as AdminBvote for shared backend)
VITE_SOCKET_URL=http://localhost:3001

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# JWT token storage key (different from admin)
VITE_TOKEN_KEY=user_token
# JWT refresh token key
VITE_REFRESH_TOKEN_KEY=user_refresh_token
# Session timeout (minutes)
VITE_SESSION_TIMEOUT=60

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/disable real-time features
VITE_ENABLE_REALTIME=1
# Enable/disable notifications
VITE_ENABLE_NOTIFICATIONS=1
# Enable/disable voting
VITE_ENABLE_VOTING=1
# Enable/disable contests
VITE_ENABLE_CONTESTS=1

# ========================================
# MOCK DATA CONFIGURATION
# ========================================
# Mock data refresh interval (seconds)
VITE_MOCK_REFRESH_INTERVAL=5
# Mock data simulation delay (ms)
VITE_MOCK_DELAY_MIN=150
VITE_MOCK_DELAY_MAX=600

# ========================================
# UI/UX CONFIGURATION
# ========================================
# Theme (light, dark, auto)
VITE_THEME=light
# Language (vi, en)
VITE_LANGUAGE=vi
# Enable animations
VITE_ENABLE_ANIMATIONS=1
