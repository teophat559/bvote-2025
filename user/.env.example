# ===========================================
# BVOTE USER FRONTEND ENVIRONMENT CONFIGURATION
# ===========================================

# API Configuration
VITE_API_URL=https://api.programbvote2025.online
VITE_SOCKET_URL=wss://api.programbvote2025.online

# Application Configuration
VITE_APP_NAME=BVOTE User Portal
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Contest Configuration
VITE_CONTEST_ID=bvote2025
VITE_VOTING_ENABLED=1
VITE_REGISTRATION_ENABLED=1

# Social Login Configuration
VITE_ENABLE_FACEBOOK_LOGIN=1
VITE_ENABLE_GOOGLE_LOGIN=1
VITE_ENABLE_ZALO_LOGIN=1

# UI Configuration
VITE_THEME=light
VITE_LANGUAGE=vi
VITE_TIMEZONE=Asia/Ho_Chi_Minh

# Feature Flags
VITE_ENABLE_REAL_TIME_VOTING=1
VITE_ENABLE_LIVE_RESULTS=1
VITE_ENABLE_NOTIFICATIONS=1

# Development Configuration (for local development)
# VITE_API_URL=http://localhost:3000
