# BVOTE Backend - Production Environment
# ========================================

# SERVER CONFIGURATION
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# DATABASE CONFIGURATION
FORCE_DATABASE=true
DB_HOST=localhost
DB_PORT=3306
DB_USER=bvote_prod
DB_PASSWORD=your_secure_password_here
DB_NAME=bvote_production
DB_SSL=true
DB_POOL_MIN=5
DB_POOL_MAX=20

# SECURITY
JWT_SECRET=your_jwt_secret_key_256_bits_minimum_here
JWT_REFRESH_SECRET=your_refresh_secret_key_256_bits_minimum_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900000

# CORS CONFIGURATION
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# SESSION MANAGEMENT
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# LOGGING
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log
AUDIT_LOG_FILE=./logs/audit.log

# MONITORING
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENDPOINT=/health
ENABLE_REQUEST_LOGGING=true

# EXTERNAL SERVICES
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
EMAIL_SERVICE_URL=https://api.emailservice.com
EMAIL_API_KEY=your_email_api_key

# REDIS (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# SOCKET.IO
SOCKET_CORS_ORIGIN=https://yourdomain.com
SOCKET_ENABLE_COMPRESSION=true
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# BACKUP
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# API CONFIGURATION
API_VERSION=v1
API_RATE_LIMIT=1000
API_TIMEOUT=30000
API_MAX_PAYLOAD_SIZE=10mb

# FEATURE FLAGS
ENABLE_AUDIT_LOGGING=true
ENABLE_REAL_TIME=true
ENABLE_NOTIFICATIONS=true
ENABLE_USER_REGISTRATION=false
ENABLE_CONTEST_CREATION=true
ENABLE_BOT_SYSTEM=false

# PERFORMANCE
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=1000

# SECURITY HEADERS
HELMET_ENABLED=true
HSTS_ENABLED=true
CONTENT_SECURITY_POLICY=true
X_FRAME_OPTIONS=DENY
