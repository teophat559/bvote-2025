# BVOTE Backend Production Environment Configuration

# Application
NODE_ENV=production
PORT=3000
APP_NAME=BVOTE Backend
APP_VERSION=2.0.0

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-256-bit
ENCRYPTION_KEY=your-32-char-encryption-key-here!!
ADMIN_KEY=WEBBVOTE2025$ABC

# Database
DATABASE_URL=sqlite:./data/bvote.db

# Redis (for sessions and caching)
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com

# Rate Limiting (Stricter in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=50
RATE_LIMIT_STRICT_MAX=3

# Logging
LOG_LEVEL=warn
LOG_FILE=./logs/production.log
ENABLE_CONSOLE_LOGS=false

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_NOSNIFF_ENABLED=true
